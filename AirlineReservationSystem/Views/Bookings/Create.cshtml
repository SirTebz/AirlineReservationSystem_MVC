@model BookingViewModel
@{
    ViewData["Title"] = "Book Flight";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="text-center mb-4"><i class="bi bi-ticket-perforated"></i> Complete Your Booking</h2>
            
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Flight Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Flight:</strong> @Model.Flight?.FlightNumber</p>
                            <p><strong>Route:</strong> @Model.Flight?.Origin â†’ @Model.Flight?.Destination</p>
                            <p><strong>Departure:</strong> @Model.Flight?.DepartureTime.ToString("MMM dd, yyyy hh:mm tt")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Seat:</strong> @Model.Seat?.SeatNumber (@Model.Seat?.SeatClass Class)</p>
                            <p><strong>Aircraft:</strong> @Model.Flight?.AircraftType</p>
                            <p><strong>Total Price:</strong> <span class="text-success h5">$@Model.TotalPrice.ToString("N2")</span></p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Passenger Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="FlightId" />
                        <input type="hidden" asp-for="SeatId" />
                        <input type="hidden" asp-for="TotalPrice" />
                        
                        <div class="mb-3">
                            <label asp-for="PassengerName" class="form-label">Full Name</label>
                            <input asp-for="PassengerName" class="form-control form-control-lg" placeholder="Enter passenger full name" />
                            <span asp-validation-for="PassengerName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PassengerEmail" class="form-label">Email Address</label>
                            <input asp-for="PassengerEmail" type="email" class="form-control form-control-lg" placeholder="passenger@example.com" />
                            <span asp-validation-for="PassengerEmail" class="text-danger"></span>
                            <small class="form-text text-muted">We'll send your booking confirmation to this email.</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PassengerPhone" class="form-label">Phone Number</label>
                            <input asp-for="PassengerPhone" type="tel" class="form-control form-control-lg" placeholder="+27 (123) 456-789" />
                            <span asp-validation-for="PassengerPhone" class="text-danger"></span>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Please review all information carefully before confirming your booking.
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Confirm Booking - $@Model.TotalPrice.ToString("N2")
                            </button>
                            <a asp-controller="Flights" asp-action="Details" asp-route-id="@Model.FlightId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Go Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
