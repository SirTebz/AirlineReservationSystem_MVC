@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-white text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 400px; display: flex; align-items: center;">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">Welcome to SkyWings Airlines</h1>
        <p class="lead mb-4">Discover the world with comfort and style. Book your next adventure today!</p>
        <a asp-controller="Flights" asp-action="Index" class="btn btn-light btn-lg px-5">
            <i class="bi bi-search"></i> Search Flights
        </a>
    </div>
</div>

<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="fw-bold mb-3">Why Choose SkyWings?</h2>
            <p class="text-muted">Experience the difference with our premium services</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-clock-history" style="font-size: 2rem;"></i>
                    </div>
                    <h4 class="card-title">On-Time Performance</h4>
                    <p class="card-text text-muted">98% on-time arrival rate. We value your time as much as you do.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-shield-check" style="font-size: 2rem;"></i>
                    </div>
                    <h4 class="card-title">Safety First</h4>
                    <p class="card-text text-muted">Industry-leading safety standards and modern aircraft fleet.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-star-fill" style="font-size: 2rem;"></i>
                    </div>
                    <h4 class="card-title">Premium Comfort</h4>
                    <p class="card-text text-muted">Spacious seating, in-flight entertainment, and excellent service.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5 my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold mb-3">Popular Destinations</h2>
                <p class="text-muted mb-4">Explore our most sought-after routes and discover amazing places around the world.</p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary"></i> Cape Town to Johannesburg</li>
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary"></i> Johannesburg to Cape Town</li>
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary"></i> Bloemfontein to Durban</li>
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary"></i> Durban to Johannesburg</li>
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary"></i> Durban to Cape Town</li>
                </ul>
                <a asp-controller="Flights" asp-action="Browse" class="btn btn-primary mt-3">View All Flights</a>
            </div>
            <div class="col-md-6 text-center">
                <div class="p-5">
                    <i class="bi bi-globe text-primary" style="font-size: 15rem; opacity: 0.1;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="fw-bold mb-4">Ready to Fly?</h2>
            <p class="lead text-muted mb-4">Join thousands of satisfied travelers who choose SkyWings for their journeys</p>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-person-plus"></i> Sign Up Now
                </a>
            }
            <a asp-controller="Flights" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-search"></i> Find Your Flight
            </a>
        </div>
    </div>
</div>
