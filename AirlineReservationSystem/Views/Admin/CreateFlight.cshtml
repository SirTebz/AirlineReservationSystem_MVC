@model Flight
@{
    ViewData["Title"] = "Create Flight";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h2 class="mb-4"><i class="bi bi-plus-circle"></i> Add New Flight</h2>

            <div class="card shadow">
                <div class="card-body p-4">
                    <form asp-action="CreateFlight" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FlightNumber" class="form-label"></label>
                                <input asp-for="FlightNumber" class="form-control" placeholder="e.g., AA101" />
                                <span asp-validation-for="FlightNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AircraftType" class="form-label"></label>
                                <input asp-for="AircraftType" class="form-control" placeholder="e.g., Boeing 737" />
                                <span asp-validation-for="AircraftType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origin" class="form-label"></label>
                                <input asp-for="Origin" class="form-control" placeholder="e.g., New York" />
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Destination" class="form-label"></label>
                                <input asp-for="Destination" class="form-control" placeholder="e.g., Los Angeles" />
                                <span asp-validation-for="Destination" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartureTime" class="form-label"></label>
                                <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
                                <span asp-validation-for="DepartureTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ArrivalTime" class="form-label"></label>
                                <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
                                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="2499.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalSeats" class="form-label"></label>
                                <input asp-for="TotalSeats" type="number" class="form-control" placeholder="180" />
                                <span asp-validation-for="TotalSeats" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter flight description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Create Flight
                            </button>
                            <a asp-action="Flights" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Flights
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
