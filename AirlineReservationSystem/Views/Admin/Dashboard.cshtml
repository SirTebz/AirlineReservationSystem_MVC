@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4"><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
        </div>
    </div>
    
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-airplane text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">@ViewBag.TotalFlights</h3>
                    <p class="text-muted">Total Flights</p>
                    <small class="text-success">@ViewBag.ActiveFlights Active</small>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-ticket-perforated text-success" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">@ViewBag.TotalBookings</h3>
                    <p class="text-muted">Total Bookings</p>
                    <small class="text-success">@ViewBag.ConfirmedBookings Confirmed</small>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-x-circle text-danger" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">@ViewBag.CancelledBookings</h3>
                    <p class="text-muted">Cancelled</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-currency-dollar text-warning" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">$@ViewBag.TotalRevenue.ToString("N0")</h3>
                    <p class="text-muted">Total Revenue</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-airplane"></i> Flight Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage all flights in the system. Add new flights, edit existing ones, or remove outdated schedules.</p>
                    <a asp-action="Flights" class="btn btn-primary">
                        <i class="bi bi-list"></i> Manage Flights
                    </a>
                    <a asp-action="CreateFlight" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add New Flight
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-ticket-perforated"></i> Booking Management</h5>
                </div>
                <div class="card-body">
                    <p>View and manage all customer bookings. Update booking statuses and handle cancellations.</p>
                    <a asp-action="Bookings" class="btn btn-success">
                        <i class="bi bi-list"></i> View All Bookings
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
