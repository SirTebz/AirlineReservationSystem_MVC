@model List<Flight>
@{
    ViewData["Title"] = "Manage Flights";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-airplane"></i> Manage Flights</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="CreateFlight" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Flight
            </a>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No flights in the system. Add your first flight!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Flight #</th>
                        <th>Route</th>
                        <th>Departure</th>
                        <th>Arrival</th>
                        <th>Aircraft</th>
                        <th>Price</th>
                        <th>Seats</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td><strong>@flight.FlightNumber</strong></td>
                            <td>@flight.Origin â†’ @flight.Destination</td>
                            <td>@flight.DepartureTime.ToString("MMM dd, hh:mm tt")</td>
                            <td>@flight.ArrivalTime.ToString("MMM dd, hh:mm tt")</td>
                            <td>@flight.AircraftType</td>
                            <td>$@flight.Price.ToString("N2")</td>
                            <td>@flight.AvailableSeats / @flight.TotalSeats</td>
                            <td>
                                @if (flight.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="FlightDetails" asp-route-id="@flight.FlightId" 
                                       class="btn btn-info" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="EditFlight" asp-route-id="@flight.FlightId" 
                                       class="btn btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger" title="Delete"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal@(flight.FlightId)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                
                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal@(flight.FlightId)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Delete Flight</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete flight <strong>@flight.FlightNumber</strong>?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="DeleteFlight" asp-route-id="@flight.FlightId" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
